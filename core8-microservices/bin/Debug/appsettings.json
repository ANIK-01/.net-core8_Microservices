{
    "ConnectionStrings": {
        "Database": "User ID=postgres;Password=admin;Host=192.168.0.215;Port=2345;Database=CatalogDb;"
    },

    "Serilog": {
        "Using": [
            "Serilog.Sinks.Seq",
            "Serilog.Sinks.File",
            "Serilog.Sinks.Console"
        ],
        "MinimumLevel": "Information",
        "WriteTo": [
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://localhost:7002"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/catalogs2.txt",
                    "rollingInterval": "Day"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithThreadId",
            "WithMachineName"
        ]
    },

    "Kestrel": {
        "Certificates": {
            "Default": {
                "Path": "/app/certificates/aspnetapp.pfx",
                "Password": "admin"
            }
        },
        "AllowedHosts": "*"
    }
}
